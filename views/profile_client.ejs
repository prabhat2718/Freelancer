<% include partials/header %>

<div class="row">
	Name: <%= user.name %>	</br>
	Username: @<%= user.username %>	</br>
	Organization: <%= user.organization %> </br>
	Member since <%= user.joiningDate %>	</br> 
</div>

<div class="row">
	Email: <%= user.email %> </br>
	Mobile: <%= user.mobile %> </br>
	Github: <%= user.githubLink %> </br>
</div>

<div class="row">
	Details:
	<p> <%= user.detailsClient %> </p>
	Client Skills: </br>
	<ul>
		<% user.skillsClient.forEach(function(skill){ %>
			<li> <%= skill %> </li>
		<% }); %>
	</ul>
</div>

<div class="row">
	Client Projects: </br>
	<ul>
		<% user.projectsClient.forEach(function(project){ %>
			<li> <a href="/project/<%= project.code %>"> <%= project.name %> </a> </li>
		<% }); %>
	</ul>
</div>

<% include partials/footer %>